<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Nudge.Ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="760"
        x:Class="Nudge.Ui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Nudge">

    <Grid RowDefinitions="*,Auto" Margin="16">
        <Border Grid.Row="1" Background="#1F2937" CornerRadius="8" Padding="12" Margin="0,10,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding RunStatus}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="White" Text="{Binding ContactableCount, StringFormat='Contactable: {0}'}" />
            </Grid>
        </Border>

        <TabControl Grid.Row="0" SelectedIndex="{Binding CurrentViewIndex}">
            <TabItem Header="Run">
                <ScrollViewer>
                    <StackPanel Spacing="10" Margin="8">
                        <TextBlock Text="Run Configuration (import from JSON)" FontWeight="SemiBold" />
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                            <TextBox Grid.Column="0" Text="{Binding ConfigPath}" Watermark="Path to run config JSON" />
                            <Button Grid.Column="1" Content="Browse..." Click="OnBrowseConfigClicked" />
                            <Button Grid.Column="2" Content="Run CLI + Ingest" Command="{Binding RunFromConfigCommand}" />
                        </Grid>

                        <TextBlock Text="Command Preview" FontWeight="SemiBold"/>
                        <TextBox IsReadOnly="True" Text="{Binding CommandPreview}" TextWrapping="Wrap" MinHeight="50" />

                        <TextBlock Text="Warnings / STDERR" FontWeight="SemiBold"/>
                        <TextBox IsReadOnly="True" Text="{Binding WarningsText}" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="150" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Queue">
                <Grid ColumnDefinitions="2*,3*" ColumnSpacing="10" Margin="8">
                    <StackPanel Spacing="8">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <Button Content="Refresh Queue" Command="{Binding RefreshQueueCommand}" />
                            <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding ContactableCount, StringFormat='Contactable targets: {0}'}" />
                        </Grid>
                        <ListBox ItemsSource="{Binding QueueItems}" SelectedItem="{Binding SelectedQueueItem}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Background="#374151" CornerRadius="6">
                                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="2">
                                            <TextBlock Text="{Binding ShowName}" FontWeight="SemiBold" Foreground="White" TextWrapping="Wrap" />
                                            <TextBlock Grid.Column="1" Foreground="White" Text="{Binding Score, StringFormat='Score {0:F3}'}" />
                                            <TextBlock Grid.Row="1" Foreground="White" Text="{Binding EffectiveContactEmail, StringFormat='Contact: {0}'}" />
                                            <TextBlock Grid.Row="2" Foreground="White" Text="{Binding State, StringFormat='State: {0}'}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <ScrollViewer Grid.Column="1">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Selected Target" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding SelectedItemSummary}" TextWrapping="Wrap"/>

                            <TextBlock Text="Manual Contact Email" />
                            <TextBox Text="{Binding ManualContactEmail}" Watermark="email@example.com" />

                            <TextBlock Text="Tags (comma-separated)" />
                            <TextBox Text="{Binding QueueTags}" />

                            <TextBlock Text="Note" />
                            <TextBox Text="{Binding QueueNote}" AcceptsReturn="True" MinHeight="70" TextWrapping="Wrap" />

                            <TextBlock Text="Snooze Until (UTC)" />
                            <DatePicker SelectedDate="{Binding SnoozeUntilUtc}" />

                            <WrapPanel Orientation="Horizontal" ItemHeight="34" ItemWidth="170">
                                <Button Content="Save Tags/Note" Command="{Binding SaveAnnotationCommand}" />
                                <Button Content="Mark Contacted" Command="{Binding MarkContactedCommand}" />
                                <Button Content="Mark Replied YES" Command="{Binding MarkRepliedYesCommand}" />
                                <Button Content="Mark Replied NO" Command="{Binding MarkRepliedNoCommand}" />
                                <Button Content="Snooze" Command="{Binding SnoozeCommand}" />
                            </WrapPanel>

                            <TextBlock Text="Recent Episode Titles" FontWeight="SemiBold"/>
                            <ItemsControl ItemsSource="{Binding SelectedQueueItem.RecentEpisodeTitles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding .}" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="History">
                <Grid RowDefinitions="Auto,*" Margin="8">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                        <TextBlock VerticalAlignment="Center" Text="Filter" />
                        <TextBox Grid.Column="1" Text="{Binding HistoryFilterText}" Watermark="identity, show, email, note..." />
                        <Button Grid.Column="2" Content="Refresh" Command="{Binding RefreshHistoryCommand}" />
                    </Grid>
                    <ListBox Grid.Row="1" Margin="0,8,0,0" ItemsSource="{Binding FilteredHistoryItems}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Background="#374151" CornerRadius="6">
                                    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="2">
                                        <TextBlock Text="{Binding ShowName}" Foreground="White" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="1" Foreground="White" Text="{Binding EventType, StringFormat='Event: {0}'}" />
                                        <TextBlock Grid.Row="2" Foreground="White" Text="{Binding OccurredAtUtc, StringFormat='When: {0:u}'}" />
                                        <TextBlock Grid.Row="2" HorizontalAlignment="Right" Foreground="White" Text="{Binding IdentityKey}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
