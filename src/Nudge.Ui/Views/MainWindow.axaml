<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Nudge.Ui.ViewModels"
        xmlns:model="using:Nudge.Ui.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="760"
        x:Class="Nudge.Ui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        MinWidth="980"
        MinHeight="680"
        Background="#F8FAFC"
        Title="Nudge">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Cursor" Value="Arrow" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="*,Auto" RowSpacing="10" Margin="16">
        <Border Grid.Row="1" Background="#1F2937" CornerRadius="8" Padding="12" Margin="0,10,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                <TextBlock Text="{Binding RunStatus}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="White" Text="{Binding ContactableCount, StringFormat='Tracked: {0}'}" />
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <ProgressBar Width="100" IsIndeterminate="True" IsVisible="{Binding IsBusy}" />
                    <TextBlock Text="Working..." Foreground="White" IsVisible="{Binding IsBusy}" />
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="0" SelectedIndex="{Binding CurrentViewIndex}">
            <TabItem Header="Run">
                <ScrollViewer>
                    <StackPanel Spacing="12" Margin="10">
                        <Border Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Run Configuration" FontWeight="SemiBold" FontSize="16" />

                                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                                    <TextBlock Text="Keywords (comma-separated)" FontWeight="SemiBold" VerticalAlignment="Center" />
                                    <Button Grid.Column="1" Content="Reset Run Settings" Command="{Binding ResetRunConfigCommand}" />
                                    <Button Grid.Column="2"
                                            Content="Full Reset"
                                            Background="#991B1B"
                                            Foreground="White"
                                            Command="{Binding StartFullResetCommand}" />
                                </Grid>
                                <TextBox Text="{Binding RunKeywords}"
                                         Watermark="masters athlete, over 40 fitness, longevity performance"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="60" />
                                <TextBlock Text="Use specific phrases to improve podcast relevance."
                                           TextWrapping="Wrap"
                                           Foreground="#6B7280" />
                                <Border IsVisible="{Binding IsFullResetConfirmVisible}"
                                        Background="#FEF2F2"
                                        BorderBrush="#FECACA"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="10">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Full reset clears all runs, queue state, and history. This cannot be undone."
                                                   TextWrapping="Wrap"
                                                   Foreground="#991B1B"
                                                   FontWeight="SemiBold" />
                                        <WrapPanel Orientation="Horizontal" ItemHeight="34" ItemWidth="170">
                                            <Button Content="Confirm Full Reset"
                                                    Command="{Binding ConfirmFullResetCommand}"
                                                    Background="#991B1B"
                                                    Foreground="White" />
                                            <Button Content="Cancel" Command="{Binding CancelFullResetCommand}" />
                                        </WrapPanel>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Published After Days" FontWeight="SemiBold" />
                                <TextBox Text="{Binding PublishedAfterDays}" Width="180" Watermark="60" HorizontalAlignment="Left" />
                                <TextBlock Text="Limits candidates to shows with recent episodes in this window."
                                           TextWrapping="Wrap"
                                           Foreground="#6B7280" />

                                <TextBlock Text="Top Results To Keep" FontWeight="SemiBold" />
                                <TextBox Text="{Binding RunTop}" Width="180" Watermark="3" HorizontalAlignment="Left" />
                                <TextBlock Text="Keeps only the highest-ranked targets from this run."
                                           TextWrapping="Wrap"
                                           Foreground="#6B7280" />

                                <TextBlock Text="{Binding RunConfigMessage}" FontWeight="SemiBold" Foreground="#1F2937" />

                                <Button Content="Run CLI + Ingest"
                                        Command="{Binding RunFromConfigCommand}"
                                        Background="#1D4ED8"
                                        Foreground="White"
                                        HorizontalAlignment="Left"
                                        MinWidth="170" />
                            </StackPanel>
                        </Border>

                        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="10">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Command Preview" FontWeight="SemiBold" FontSize="14"/>
                                <TextBox IsReadOnly="True"
                                         Text="{Binding CommandPreview}"
                                         TextWrapping="Wrap"
                                         MinHeight="70"
                                         FontFamily="Consolas"
                                         Background="#FFFFFF"
                                         BorderBrush="#D1D5DB"
                                         BorderThickness="1"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                        </Border>

                        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="10">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Warnings / STDERR" FontWeight="SemiBold" FontSize="14"/>
                                <TextBox IsReadOnly="True"
                                         Text="{Binding WarningsText}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="160"
                                         FontFamily="Consolas"
                                         Background="#FFFFFF"
                                         BorderBrush="#D1D5DB"
                                         BorderThickness="1"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Tracker">
                <Grid ColumnDefinitions="2*,3*" ColumnSpacing="12" Margin="10">
                    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="8">
                        <TextBox Grid.Row="0"
                                 Text="{Binding QueueFilterText}"
                                 Watermark="Search by show, email, tag, note, identity..." />
                        <Border Grid.Row="1" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding QueueGroups}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Expander Header="{Binding Header}" IsExpanded="True" Margin="0,0,0,8">
                                                <ListBox ItemsSource="{Binding Items}"
                                                         SelectedItem="{ReflectionBinding $parent[Window].DataContext.SelectedQueueItem}"
                                                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                                    <ListBox.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel />
                                                        </ItemsPanelTemplate>
                                                    </ListBox.ItemsPanel>
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Padding="10" Margin="0,0,0,6" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6">
                                                                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="8" RowSpacing="4">
                                                                    <TextBlock Text="{Binding ShowName}" FontWeight="SemiBold" Foreground="#111827" TextWrapping="Wrap" />
                                                                    <TextBlock Grid.Row="1"
                                                                               Foreground="#4B5563"
                                                                               Text="{Binding OutreachPriority, StringFormat='Priority: {0}'}" />
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Expander>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        <TextBlock Grid.Row="2" Text="{Binding QueueEmptyMessage}" Foreground="#6B7280" TextWrapping="Wrap" />
                    </Grid>

                    <Border Grid.Column="1" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12">
                        <ScrollViewer>
                            <StackPanel Spacing="10">
                                <TextBlock Text="Selected Podcast" FontSize="16" FontWeight="SemiBold"/>

                                <Border IsVisible="{Binding HasNoQueueSelection}"
                                        Background="#FFFFFF"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <TextBlock Text="Choose a queue item on the left to unlock contact details, snooze actions, and outreach outcomes."
                                               Foreground="#6B7280"
                                               TextWrapping="Wrap" />
                                </Border>

                                <StackPanel Spacing="10" IsVisible="{Binding HasQueueSelection}" IsEnabled="{Binding HasQueueSelection}">
                                    <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="10">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Contact + Notes" FontWeight="SemiBold" Foreground="#111827" />
                                            <TextBlock Text="Contact" />
                                            <TextBox Text="{Binding ManualContactEmail}" Watermark="email@example.com" />
                                            <TextBlock Text="Note" />
                                            <TextBox Text="{Binding QueueNote}" AcceptsReturn="True" MinHeight="80" TextWrapping="Wrap" />
                                            <Button Content="Save Contact + Notes"
                                                    MinHeight="34"
                                                    Width="190"
                                                    HorizontalAlignment="Left"
                                                    Command="{Binding SaveAnnotationCommand}" />
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="10">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Snooze" FontWeight="SemiBold" Foreground="#111827" />
                                            <ComboBox ItemsSource="{Binding SnoozePresetOptions}"
                                                      SelectedItem="{Binding SelectedSnoozePreset}"
                                                      Width="190">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Label}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                            <TextBlock Text="{Binding SnoozeUntilDisplay}" FontWeight="SemiBold" />
                                            <Button Content="Snooze"
                                                    MinHeight="34"
                                                    Width="190"
                                                    HorizontalAlignment="Left"
                                                    Command="{Binding SnoozeCommand}" />
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="10">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Outreach Outcome" FontWeight="SemiBold" Foreground="#111827" />
                                            <ComboBox ItemsSource="{Binding OutreachOutcomeOptions}"
                                                      SelectedItem="{Binding SelectedOutreachOutcome}"
                                                      MaxDropDownHeight="260"
                                                      Width="190">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{Binding BackgroundColor}"
                                                                CornerRadius="4"
                                                                Padding="6,4">
                                                            <TextBlock Text="{Binding Label}"
                                                                       Foreground="{Binding ForegroundColor}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="10">
                                    <TextBlock Text="{Binding SelectedItemSummary}" TextWrapping="Wrap"/>
                                </Border>

                                <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="10">
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Show Metadata" FontWeight="SemiBold" Foreground="#111827" />
                                        <TextBlock Text="{Binding SelectedLanguageDisplay, StringFormat='Language: {0}'}" />
                                        <TextBlock Text="{Binding SelectedPriorityDisplay, StringFormat='Outreach priority: {0}'}" />
                                        <TextBlock Text="{Binding SelectedNewestEpisodeDisplay, StringFormat='Newest episode: {0}'}" />
                                        <TextBlock Text="{Binding SelectedScoreDisplay, StringFormat='Total score: {0}'}"
                                                   ToolTip.Tip="Final ranking score. Calculated as a weighted blend of audience proxy, publishing consistency, and topic match, then multiplied by recency activity." />
                                        <TextBlock Text="Feed URL" />
                                        <Button Content="{Binding SelectedFeedUrl}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                HorizontalAlignment="Left"
                                                HorizontalContentAlignment="Left"
                                                Foreground="#1D4ED8"
                                                FontWeight="SemiBold"
                                                ToolTip.Tip="{Binding SelectedFeedUrl}"
                                                Command="{Binding OpenFeedUrlCommand}" />
                                    </StackPanel>
                                </Border>

                                <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="10">
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Score Breakdown" FontWeight="SemiBold" Foreground="#111827" />
                                        <TextBlock Text="{Binding SelectedReachDisplay, StringFormat='Reach: {0}'}"
                                                   ToolTip.Tip="Audience proxy. Uses API-estimated reach, lightly adjusted with feed quality signals like recent episodes and parseable dates." />
                                        <TextBlock Text="{Binding SelectedFrequencyDisplay, StringFormat='Frequency: {0}'}"
                                                   ToolTip.Tip="Publishing consistency. Higher when episodes are recent and release gaps are shorter." />
                                        <TextBlock Text="{Binding SelectedNicheFitDisplay, StringFormat='Niche fit: {0}'}"
                                                   ToolTip.Tip="Topic match to your niche. Based on keyword/token hits in show name, description, and recent episode titles, with penalties for off-topic business terms." />
                                        <TextBlock Text="{Binding SelectedActivityDisplay, StringFormat='Activity: {0}'}"
                                                   ToolTip.Tip="Recency multiplier from newest episode age. &lt;=30d: 1.0, &lt;=90d: 0.7, &lt;=180d: 0.4, older: 0.15." />
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Why It Matched" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding SelectedNicheFitHighlights}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FFFFFF"
                                                    BorderBrush="#E5E7EB"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="8"
                                                    Margin="0,0,0,6">
                                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="6">
                                                    <TextBlock Text="•" Foreground="#6B7280" VerticalAlignment="Top" />
                                                    <TextBlock Grid.Column="1" Text="{Binding .}" TextWrapping="Wrap" Foreground="#111827" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="{Binding SelectedNicheFitHighlightsEmptyMessage}" Foreground="#6B7280" TextWrapping="Wrap" />

                                <TextBlock Text="Recent Episode Titles" FontWeight="SemiBold"/>
                                <ItemsControl ItemsSource="{Binding SelectedRecentEpisodes}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="model:QueueEpisode">
                                            <Grid RowDefinitions="Auto,Auto" Margin="0,0,0,6">
                                                <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="6">
                                                    <TextBlock Text="•" Foreground="#6B7280" VerticalAlignment="Top" />
                                                    <TextBlock Grid.Column="1"
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="#6B7280"
                                                               FontSize="12"
                                                               Text="{Binding PublishedAtUtc, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                                               IsVisible="{Binding HasPublishedAtUtc}" />
                                                    <TextBlock Grid.Column="1"
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="#9CA3AF"
                                                               FontSize="12"
                                                               Text="-"
                                                               IsVisible="{Binding HasNoPublishedAtUtc}" />
                                                    <Button Grid.Column="2"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="0"
                                                            HorizontalAlignment="Left"
                                                            HorizontalContentAlignment="Left"
                                                            Foreground="#1D4ED8"
                                                            FontWeight="SemiBold"
                                                            ToolTip.Tip="{Binding Url}"
                                                            Command="{ReflectionBinding $parent[Window].DataContext.OpenEpisodeCommand}"
                                                            CommandParameter="{Binding .}"
                                                            IsVisible="{Binding HasUrl}"
                                                            Content="{Binding Title}" />
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding Title}"
                                                               Foreground="#111827"
                                                               IsVisible="{Binding HasNoUrl}"
                                                               TextWrapping="Wrap" />
                                                </Grid>
                                                <Border Grid.Row="1" Margin="18,6,0,0" Height="1" Background="#E5E7EB" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="{Binding SelectedEpisodesEmptyMessage}" Foreground="#6B7280" TextWrapping="Wrap" />
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="History">
                <Grid RowDefinitions="Auto,*,Auto" Margin="10">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                        <TextBlock VerticalAlignment="Center" Text="Filter" />
                        <TextBox Grid.Column="1" Text="{Binding HistoryFilterText}" Watermark="identity, show, email, note..." />
                        <Button Grid.Column="2" Content="Refresh" Command="{Binding RefreshHistoryCommand}" />
                    </Grid>
                    <Border Grid.Row="1" Margin="0,8,0,0" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="8">
                        <ListBox ItemsSource="{Binding FilteredHistoryItems}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="0,0,0,6" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6">
                                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="2" ColumnSpacing="8">
                                            <TextBlock Text="{Binding ShowName}" Foreground="#111827" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Row="1" Foreground="#4B5563" Text="{Binding EventType, StringFormat='Event: {0}'}" />
                                            <TextBlock Grid.Row="2" Foreground="#4B5563" Text="{Binding OccurredAtUtc, StringFormat='When: {0:u}'}" />
                                            <TextBlock Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Foreground="#4B5563" Text="{Binding IdentityKey}" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    <TextBlock Grid.Row="2" Margin="0,8,0,0" Text="{Binding HistoryEmptyMessage}" Foreground="#6B7280" TextWrapping="Wrap" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
